<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/headerShop') %> 
    <!--Cierre Navbar -->
    <main class="main-container">
        <section class="item container">
            
            <picture class="item__cover">
                <img class="item_imagen" src="<%= producto.img_front %>" id="imagen_item" alt="<%= producto.product_description %>">
            </picture>
            <article class="item__content">
                <p class="item__licence"><%= producto.licence_name %></p>
                <h3 class="item__name"><%= producto.product_name %></h3>
                <p class="item__text"><%=producto.product_description%></p>
                <p class="item__price">$<%= producto.product_price %></p>
                <div class="item__carrito">
                    <span><input class="item__input" type="text" name="quantity" id="quantity" placeholder="0" ></span>
                    <span class="item__carrito--add">
                        <button class="item__add" id="add"><iconify-icon class="item__add--icon" icon="ic:round-plus" width="12"></iconify-icon></button>
                        <button class="item__add" id="substract"><iconify-icon class="item__add--icon" icon="ic:round-minus" width="12"></iconify-icon></button>
                    </span>
                    <button class="item__button">Agregar al Carrito</button>
                </div>
                <p class="item__promo"><span class="item__promo--underlined">Ver m√©todos de pago</span><%= producto.product_promo %></p>
            </article>
            
        </section>

        <section class="slider container glide">
            <h2 class="slider__title">PRODUCTOS RELACIONADOS</h2>
            <div class="glide__track" data-glide-el="track">
                <ul class="slider__items glide__slides">
                    <% data.forEach(producto => { %>
                    <li class="slider__item glide__slide">
                        <article class="card__item">
                            <a class="card-item__link" href="">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="/img/star-wars/trooper-1.webp" alt="trooper">
                                    <img class="card-item__img--back" src="/img/star-wars/trooper-box.webp" alt="trooper en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence"><%= producto.licence_name %></p>
                                    <h4 class="card-item__name"><%= producto.product_name %></h4>
                                    <p class="card-item__price">$<%= producto.product_price %></p>
                                    <p class="card-item__promo"><%= producto.product_promo %></p>
                                </div>
                            </a>    
                        </article>
                    </li>
                    <% }); %>
                </ul>
            </div>      
            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left icon__slider" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
                <button class="glide__arrow glide__arrow--right icon__slider" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
            </div>  
        </section>
    </main> 
    <!-- footer -->
    <%- include('../partials/footerShop') %> 
    <!--Cierre footer-->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
</body>
</html>